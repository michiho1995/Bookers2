<table class="table table-striped">
  <% if flash[:notice] %>
    <div class="flash" >
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= render 'books/list', book:@book, user:@user %>
  
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>Title</th>
          <%= @book.title %>
          <th>Opinion</th>
          <%= @book.body %>
          <th colspan="3"></th>
        </tr>
        <tr>
          <tb><%= link_to 'Edit', edit_book_path(@book.id) %></tb>
          <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </thead>
      
      <tbody>

  <tbody>
    <% @books.each do |book| %>
    
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
    <% end %>

  </tbody>
</table>

