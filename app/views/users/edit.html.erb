
<div class="container">
  <div class="row">
	  <div class="col-md-3">
        <h2>User info</h2>

        <% if @user.errors.any? %>
              <h3><%= @user.errors.count %>error prohibited this book from being saved:</h3>
            <% @user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
        <% end %>
        <br>
          <%= form_with model:@user, local:true do |f| %>
            <label >Name</label>
          <%= f.text_field :name, autofocus: true%>
        <br>
        <br>
            <label>Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <br>
            <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction %>
        <br>
        <br>
              <%= f.submit "Update User" %>
          <% end %>
    </div>
  </div>
</div>

