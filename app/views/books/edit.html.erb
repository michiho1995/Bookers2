<% if flash[:notice] %>
  <div class="flash" >
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
	  <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
            <% @book.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
        <% end %>

        <%= form_with model:@book, local:true do |f| %>

          <h5>Title</h5>
          <%= f.text_field :title, class:"col-xs-12" %>
          <h5>Opinion</h5>
          <%= f.text_area :body, class:"col-xs-12" %>
          <br>
          <br>
          <br>
          <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
        <% end %>
          <br>
          <br>
        <tr>
          <tb><%= link_to 'Show', book_path(@book.id) %></tb>
          |
          <tb><%= link_to 'Back', books_path %></tb>
        </tr>
    </div>
  </div>
</div>
